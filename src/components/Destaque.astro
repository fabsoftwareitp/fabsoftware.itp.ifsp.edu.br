---
const {way, img, title, descricao} = Astro.props;
---

    <div class="flex justify-evenly items-center gap-y-10 border-2 border-secondary w-[28rem] h-[16rem] cursor-pointer hover:shadow-primary shadow-xl">
        <a class="open-button">
            <figure class="relative w-[27.9rem] h-[15.75rem]">
                <img src={img} alt={title} class="object-fill w-[27.9rem] h-[15.75rem] absolute top-0 left-0">
                <figcaption class="opacity-0 hover:opacity-100 duration-300 absolute top-0 left-0 w-full h-full flex items-end text-primary font-bold mx-4 my-[-1rem]"><span>{title}</span></figcaption>
            </figure>
        </a>
        <dialog class="modal">
          <div class="w-[45rem] h-[50rem] flex flex-col gap-[4rem] items-center">
                <div class="close-button self-start m-4 text-4xl text-secondary">X</div>
                <div class="flex flex-col items-center justify-center">
                    <img src={img} alt={title} class="w-[43rem] h-[25rem] border-2 border-secondary mt-4"></img>
                    <p class="text-2xl text/loose font-semibold text-primary">{title}</p>
                    <p class="text-md text/loose font-semibold text-black">{descricao}</p>
                </div>                
          </div>
        </dialog>
      
    </div>
      <script>
        const buttons = document.querySelectorAll('.open-button');
        buttons.forEach(e => {
            e.addEventListener('click', () => {
                const elementoPai = e.parentElement;
                const modal = elementoPai.querySelector("dialog");
                modal.showModal();

                elementoPai.querySelector(".close-button").addEventListener("click", ()=> {
                    modal.close();
                })
            })
        })
    
      </script>