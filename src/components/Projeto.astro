---
const {frontmatter} = Astro.props;
---

<div class="flex justify-evenly items-center gap-y-10 border-2 border-primary cursor-pointer hover:shadow-primary shadow-xl">
    <a href={frontmatter.way}>
        <figure class="relative w-[28rem] h-[16rem]">
            <img src={frontmatter.img} alt={frontmatter.title} class="object-fill w-[28rem] h-[16rem] absolute top-0 left-0">
            <figcaption class="opacity-0 hover:opacity-100 duration-300 absolute top-0 left-0 w-full h-full flex items-end text-primary font-bold mx-4 my-[-1rem]"><span>{frontmatter.title}</span></figcaption>
        </figure>
    </a>
</div>
