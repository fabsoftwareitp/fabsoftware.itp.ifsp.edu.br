---
import BaseLayout from './BaseLayout.astro';

const {title} = Astro.props;
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={title || frontmatter.name || frontmatter.title}>
    
    <div class="p-8 flex flex-wrap justify-center items-center gap-10">
        <div class="place-self-start">
            <a href="/membros"><button class="text-secondary border-2 border-primary rounded-xl bg-tertiary w-[6rem] h-[2rem]">тна Voltar</button></a>
        </div>
        <div class="place-self-start relative slideshow-container">
            {frontmatter.imgs ? <a>{frontmatter.imgs.map((img) => <div class="mySlides fade"><img src={img} class="xl:w-[30rem] xl:h-[30rem] w-[20rem] h-[20rem] rounded-xl"/></div> )}</a><div class="flex"><button class="prev text-primary w-auto text-[2rem] absolute top-[45%] left-[-1.5rem]">&#10094;</button>
            <button class="next text-primary text-[2rem] w-auto absolute top-[45%] right-[-1.5rem]">&#10095;</button></div> : <a><img src={frontmatter.img} class="xl:w-[30rem] xl:h-[30rem] w-[20rem] h-[20rem] rounded-xl" /></a>}

        </div>
        <div class="flex flex-col border-2 p-8 border-primary bg-tertiary rounded-xl items-center container prose prose-a:text-[1rem] prose-h1:text-primary prose-img:rounded-xl prose-img:hidden prose-p:text-secondary prose-p:text-justify prose-h2:text-primary prose-li:text-secondary prose-a:text-secondary prose-ul:text-start prose-ul:place-self-start">
            <slot />
        </div>
        <div>
            {frontmatter.hasTestimonial ? <p class="text-primary text-4xl font-bold">Depoimento</p><br></br> <iframe class="xl:w-[45rem] xl:h-[25rem] w-[20rem] h-[20rem] rounded-xl" src={frontmatter.video} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> : <p class="hidden">Depoimento</p>}
        </div>
    </div>

<script>
    let slideIndex = 1;
showSlides(slideIndex);

// Next/previous controls
function plusSlides(n) {
  showSlides(slideIndex += n);
}

// Thumbnail image controls
function currentSlide(n) {
  showSlides(slideIndex = n);
}

function showSlides(n) {
  let i;
  let slides = document.getElementsByClassName("mySlides");
  if (n > slides.length) {slideIndex = 1}
  if (n < 1) {slideIndex = slides.length}
  for (i = 0; i < slides.length; i++) {
    slides[i].style.display = "none";
  }
  slides[slideIndex-1].style.display = "block";
}

const btnNext = document.querySelector(".next");
btnNext.addEventListener('click', () => plusSlides(1))

const btnPrev = document.querySelector(".prev");
btnPrev.addEventListener('click', () => plusSlides(-1))


</script>
</BaseLayout>